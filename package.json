{
  "name": "kotoori",
  "private": true,
  "version": "0.0.0",
  "description": "日本語編集に最適化されたデスクトップ向けテキストエディタ（Monaco搭載）",
  "author": "kermount-dev",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite --port 1420",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "prepare": "husky",
    "rustfmt": "cargo fmt --all",
    "lint-staged": "lint-staged",
    "install:recommended-vscode-extensions": "for ext in $(jq -r '.recommendations[]' .vscode/extensions.json); do code --install-extension $ext; echo \"\"; done"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "@tauri-apps/plugin-sql": "^2.3.2",
    "@tauri-apps/plugin-store": "^2.4.2",
    "@tauri-apps/plugin-window-state": "^2.4.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff": "^8.0.3",
    "dompurify": "^3.3.1",
    "github-markdown-css": "^5.9.0",
    "lucide-react": "^0.562.0",
    "marked": "^17.0.3",
    "monaco-editor": "^0.55.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tauri-apps/cli": "^2.10.0",
    "@types/diff": "^7.0.2",
    "@types/dompurify": "^3.2.0",
    "@types/react": "^18.3.28",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^5.4.21",
    "vite-plugin-static-copy": "^3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kermount-dev/Kotoori-TextEditor"
  },
  "homepage": "https://github.com/kermount-dev/Kotoori-TextEditor#readme",
  "bugs": {
    "url": "https://github.com/kermount-dev/Kotoori-TextEditor/issues"
  },
  "keywords": [
    "editor",
    "text",
    "japanese",
    "monaco",
    "tauri",
    "kotoori"
  ]
}
